<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrinterShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PrinterShop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-calendar3-week-fill" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M2 0a2 2 0 0 0-2 2h16a2 2 0 0 0-2-2zM0 14V3h16v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2m12-8a1 1 0 1 0 2 0 1 1 0 0 0-2 0M5 9a1 1 0 1 0 2 0 1 1 0 0 0-2 0m5-2a1 1 0 1 1 0-2 1 1 0 0 1 0 2M2 9a1 1 0 1 0 2 0 1 1 0 0 0-2 0" /></svg>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>



                <form asp-page="/Products/Search" method="get" class="form-inline">
                    <input type="text" name="searchTerm" placeholder="Search products..." class="form-control" />
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>


                <div class="topnav-centered">
                    <a class="navbar-brand" style="color:black" href="#">Login</a>
                    <a class="navbar-brand" style="color:black" href="#">Indkøbskurv</a>
                </div>


                </div>
            </nav>

                <navbar class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: #a6a6a6">
                    <div class="container-md">
            
                            <a class="navbar-brand" style="color:aliceblue" href="#">Forside</a>
                            <a class="navbar-brand" style="color:aliceblue" href="#">2D Printer</a>
                        <div class="topnav-centered">
                            <a class="navbar-brand" style="color:aliceblue" href="#">3D Printer</a>
                        </div>
                            <a class="navbar-brand" style="color:aliceblue" href="#">Tilbehør</a>
          
                    </div>
                </navbar>
            </header>




    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PrinterShop - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>