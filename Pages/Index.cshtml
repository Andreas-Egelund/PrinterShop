@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    
}

<div class="text-center">
    <h1 class="display-4">Welcome to PrinterShop</h1>
</div>




<div id="carouselExampleInterval" class="carousel slide custom-carousel" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="2500">
            <img src="~/Images/Printer2D/2D100.png" class="d-block w-100" alt="...">
        </div>
        @foreach (var item in Model.Printers3D)
        {
            var imagepath = item.ProductId + ".png";
            <div class="carousel-item" data-bs-interval="2500">
                <img src="~/Images/Allimages/@imagepath" class="d-block w-100" alt="...">
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
        <span class="carousel-control-prev-icon alert-dark" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
        <span class="carousel-control-next-icon alert-dark" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>