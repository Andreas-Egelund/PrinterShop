@page
@model PrinterShop.Pages.ShoppingCartModel
@{}

@if (Model.CurrentUser.ShoppingCart.Count <= 0)
{
    <div class="container my-5">
        <h3 class="text-center">Your cart is empty</h3>
    </div>

}
else{
<div class="container my-5">
    <h2 class="mb-4 text-center">Your Cart</h2>

    <!-- Cart Items -->
    <div class="cart-items">
        @foreach (var item in Model.CurrentUser.ShoppingCart)
        {
            var imagepath = item.ProductId + ".png";

            <div class="row justify-content-center mb-4">
                <div class="col-md-8 p-4 border rounded bg-white shadow-sm">
                    <div class="row align-items-center">
                        <div class="col-4">
                            <img src="~/Images/Allimages/@imagepath" alt="@item.Name" class="img-fluid rounded" />
                        </div>
                        <div class="col-5">
                            <h5 class="mb-1">@item.Name</h5>
                        </div>
                        <div class="col-3 text-end">
                            <h5 class="text-success mb-0">$@item.Price.ToString("0.00")</h5>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Order Summary and Checkout -->
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="border rounded p-4 bg-light shadow-sm">
                <h4>Order Summary</h4>
                <hr />
                <div class="d-flex justify-content-between">
                    <span><strong>Total:</strong></span>
                        <span class="text-success"><strong>$@Model.Total.ToString("0.00")</strong></span>
                </div>
                    <a class="btn btn-primary w-100 mt-3" asp-page="/CheckOut">Go to Checkout</a>
            </div>
        </div>
    </div>
</div>
}


